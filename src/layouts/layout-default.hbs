<!doctype html>
<html class="no-js css-preload
{{#if pageClass}}andrz-page--{{pageClass}}{{/if}}
andrz-nav-root andrz-uses-nav andrz-uses-nav-left"
lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta http-equiv="cleartype" content="on">

        <title>{{#block "title"}}{{site.title}}{{/block}}</title>

        <meta name="description" content="">
        <meta name="HandheldFriendly" content="True">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="{{root}}css/main.less.css">
        <script src="{{root}}bower_components/modernizr/modernizr.js"></script>
    </head>
    <body>

        <!--
        <div class="andrz-bg-image"></div>
        <div class="andrz-bg-overlay"></div>
        -->

        <div class="andrz-nav-anim">

          <nav class="andrz-nav andrz-nav--dark">

            <!--
            <a class="andrz-nav-control andrz-nav-close">
              <span class="andrz-nav-control-icon andrz-nav-close-icon glyphicon glyphicon-remove"></span>
            </a>
            -->

            <ul class="list-unstyled andrz-nav-list" role="menu">
              {{#each nav}}
                <li class="andrz-nav-list-item nav nav-list">
                  <a href="{{#if relative}}{{../../root}}{{/if}}{{url}}" class="andrz-nav-link">
                    <span class="andrz-nav-link-icon fa fa-{{icon}}"></span>
                    <span class="andrz-nav-link-text">{{name}}</span>
                  </a>
                </li>
              {{/each}}
              <li class="divider" role="presentation">
                <hr />
              </li>
              {{#each social}}
                <li class="andrz-nav-list-item nav nav-list">
                  <a href="{{#if relative}}{{../../root}}{{/if}}{{url}}" target="_blank" class="andrz-nav-link">
                    <span class="andrz-nav-link-icon fa fa-{{icon}}"></span>
                    <span class="andrz-nav-link-text">{{name}}</span>
                  </a>
                </li>
              {{/each}}
            </ul>
          </nav>

          <div class="andrz-nonnav">

            <a class="andrz-nav-control andrz-nav-toggle">
              <span class="no-css-animation andrz-nav-control-icon andrz-nav-toggle-icon andrz-nav-toggle-closed glyphicon glyphicon-menu-hamburger"></span>
              <span class="no-css-animation andrz-nav-control-icon andrz-nav-toggle-icon andrz-nav-toggle-opened glyphicon glyphicon-remove"></span>
            </a>

            <main class="andrz-container-main">
              {{#block "body"}}BODY{{> body }}{{/block}}
            </main>

          </div>

        </div>


        <script src="{{root}}bower_components/jquery/dist/jquery.js"></script>
        <script src="{{root}}bower_components/jquery-dotimeout/jquery.ba-dotimeout.js"></script>
        <script src="{{root}}bower_components/jquery-hoverIntent/jquery.hoverIntent.js"></script>
        <script src="{{root}}bower_components/bootstrap/dist/js/bootstrap.js"></script>
        <script src="{{root}}bower_components/css-preload/src/css-preload.js"></script>
        <script src="{{root}}js/index.js"></script>

